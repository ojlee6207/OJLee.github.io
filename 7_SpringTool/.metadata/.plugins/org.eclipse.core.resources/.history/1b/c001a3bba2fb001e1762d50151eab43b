	<h1>Spring에서 AJAX 사용</h1>
	
	<h3>* 요청 시 값 전달 후 응답받기</h3>	
		<label>이름 :</label>
		<input type="text" id="name" /><br>
		<label>나이 :</label>
		<input type="text" id="age" /><br>
	<!-- 버튼 클릭 이벤트 처리 (1)	
		<button id="btn">전송</button>
	<script>
		$("#btn").click(function(){
			
		});
	</script>  -->
	<button onclick="ajaxTest1();">전송</button>
	<script>
		const ajaxTest1 = () => {
			$.ajax({
				url: 'ajax1.do',
				data: {
					name: $("#name").val() , 
					age: $("#age").val()
				},
				success: function() {
					console.log($("#name").val());
					console.log($("#age").val());
				},
				error: function(){
					console.log("Ajax 1 통신 실패");
				}
			})
		}
	</script>
